{
    "compilerOptions": {
        "target": "esnext",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "isolatedModules": true,
        "typeRoots": ["./node_modules/@types", "./@types"],
        "outDir": "dist",
        "declaration": true,
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules", "**/__tests__", "**/__mocks__", "**/__fixtures__", "dist"]
}
